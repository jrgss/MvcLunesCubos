@model IEnumerable<MvcLunesCubos.Models.Cubo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h3>Buscar por Marca</h3>
<form method="post">
    <input type="text" name="marca" />
    <button>Buscar</button>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCubo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
          
            @if (Context.User.Identity.IsAuthenticated)
            {
                <th>Comprar</th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCubo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
              <img src="@item.imagen" style="width:150px;height:150px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            @if (Context.User.Identity.IsAuthenticated)
            {
                <td>
                    <a asp-controller="Usuario" asp-action="Comprar" asp-route-idcubo="@item.IdCubo">Comprar</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
